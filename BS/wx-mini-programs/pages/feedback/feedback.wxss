/* pages/feedback/feedback.wxss */
.container{
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translate(-50%, -50%);
  width: 80vw;
}
.textarea{
  box-sizing: border-box;
  width: 100%;
  min-height: 30vh;
  padding: 2vw;
  border: gray 1px solid;
  border-radius: 1vw;
}
.submit{
  width: 100% !important;
  text-align: center;
  margin-top: 5vh;
  background-color: rgb(11, 170, 11);
  border-radius: 1vw;
  color: white;
}